rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Lists collection - users can read/write lists where they are members
    match /lists/{listId} {
      allow read: if request.auth != null &&
        request.auth.token.email in resource.data.memberEmails;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null &&
        (request.auth.uid == resource.data.ownerId ||
         request.auth.token.email in resource.data.memberEmails);
    }

    // Saved recipes collection - users can only access their own saved recipes
    match /users/{userId}/saved_recipes/{recipeId} {
      // Only the owner can read, write, update, or delete their saved recipes
      allow read, write: if request.auth != null &&
        request.auth.uid == userId;
    }
  }
}
